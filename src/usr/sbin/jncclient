#!/bin/bash

JNCCLIENT_HOME=/usr/share/jncclient

while getopts h: f; do
    case f in
        h) HOST=$OPTARG ;;
    esac
done

$JNCCLIENT_HOME/getx509certificate.sh $HOST /tmp/.cert.der 1>> /tmp/jncclient.log 2>> /tmp/jncclient.err
NCSVC_CMD=$JNCCLIENT_HOME/ncsvc
LD_PRELOAD=/usr/share/jncclient/ncsvc-wrapper.so $NCSVC_CMD $* -f /tmp/.cert.der 1>> /tmp/jncclient.log 2>> /tmp/jncclient.err
